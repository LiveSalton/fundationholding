<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="salton_full_screen_dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="salton_dialog_right_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/salton_anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/salton_anim_right_out</item>
    </style>

    <style name="salton_dialog_push_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/salton_anim_push_up</item>
        <item name="android:windowExitAnimation">@anim/salton_anim_push_down</item>
    </style>

    <style name="salton_dialog_horizontal_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/h_fragment_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/h_fragment_pop_exit</item>
    </style>
    <style name="salton_dialog_vertical_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/v_fragment_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/v_fragment_pop_exit</item>
    </style>

    <style name="salton_hint_title">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>